---
import { Picture } from 'astro:assets';
import MainSEO from '@components/SEO/Main.astro';

import Avatar from '@/assets/avatar.png';
import config from '@/config';
import MainLayout from '@/layouts/main.astro';
---

<MainSEO title={config.siteTitle} description={config.description} />
<MainLayout>
  <main
    class="my-10 flex flex-col items-center justify-center text-center"
    data-pagefind-body
  >
    <Picture
      data-pagefind-ignore
      alt="ckt"
      src={Avatar}
      class="h-32 w-32 rounded-full"
      height={150}
      width={150}
    />
    <h1 class="mt-4 text-4xl font-bold">Chan Ka Tsun</h1>
    <p class="mt-2 text-lg font-medium italic text-neutral-600 dark:text-neutral-300">
      An undergraduate student in Hong Kong University of Science and
      Technology.
    </p>
  </main>
</MainLayout>
