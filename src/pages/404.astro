---
import MainSEO from '@components/SEO/Main.astro';

import MainLayout from '@/layouts/main.astro';

// Meta data
const meta = {
	title: '404',
	description: 'The page you were searching for does not exist.',
};
---

<MainSEO includeSiteTitle title={meta.title} description={meta.description} />
<MainLayout>
  <div
    class="mb-10 mt-5 flex flex-col items-center justify-center"
    data-pagefind-ignore="all"
  >
    <div class="flex flex-col items-center justify-center text-center">
      <p class="mb-4 text-6xl font-bold">404</p>
      <p class="text-xl md:text-2xl">
        Oops!
        <br />
        The page you were searching for does not exist.
      </p>
    </div>
    <a href="/">
      <button
      title="Navigate back to the home page"
      class="button-normal mt-6" type="button"
      > Back to home</button>
    </a>
  </div>
</MainLayout>
